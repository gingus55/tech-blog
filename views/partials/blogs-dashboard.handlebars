<div id="container">
<div id="{{id}}" class="card card-body mb-3" style="width: 25rem;">
  <h4 id="{{id}}" class="card-title">Title: {{title}}</h4>
  <p id="{{id}}" class="card-text">{{content}}</p>
  <p id="{{id}}">Created: {{createdAt}}</p>
  <h5>Comments</h5>
  <ul>
    {{#each this.comments}}
      <li>{{this.content}}</li>
    {{/each}}
  </ul>
  <button data-id={{id}} class="deleteBlog" id="deleteBlog" type="submit">DELETE</button>
</div>